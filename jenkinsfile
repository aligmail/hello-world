pipeline{
    agent any
    stages{
        stage('Checkout Code'){
         steps{
             checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '292a3436-495a-4613-9213-45685671dd1b', url: 'https://github.com/aligmail/hello-world.git']]])
         }
        }
        stage('User Input'){
            steps{
                input ("Should we continue?")
            }
        }
                stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "admin"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
	}
}
